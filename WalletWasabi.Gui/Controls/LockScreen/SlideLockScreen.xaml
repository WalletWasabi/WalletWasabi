    <Thumb x:Name="PART_DragThumb">
      <Thumb.Template>
        <ControlTemplate>
          <Border Background="Transparent" />
        </ControlTemplate>
      </Thumb.Template>
    </Thumb>
  </Grid>
</lockscreen:SlideLockScreen>
