<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui">
    <controls:GroupBox Title="{Binding Title}" BorderThickness="0" Classes="docTabContainer">
        <Grid Classes="content" Margin="0 10 0 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Please visit: " />
                <Border>
                    <Border.ContextMenu>
                        <ContextMenu Name="cxm">
                            <MenuItem Header="Copy" Name="cxmItemCopy"
                             Command="{Binding CopySelection}" CommandParameter="{Binding #IssuesLink}"/>
                        </ContextMenu>
                    </Border.ContextMenu>
                <TextBox Text="http://github.com/zkSNACKs/WalletWasabi/issues" Classes="selectableTextBlock hyperLink" x:Name="IssuesLink">
                </TextBox>
                </Border>
            </StackPanel>
        </Grid>
    </controls:GroupBox>
</UserControl>
