<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui"
             xmlns:cont="clr-namespace:AvalonStudio.Controls;assembly=AvalonStudio.Shell.Extensibility"
             x:Class="WalletWasabi.Gui.Tabs.Dashboard.DashboardView">
 <Panel>
    <Panel.Styles>
      <Style Selector="TextBlock.Header">
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontSize" Value="52" />
        <Setter Property="Foreground" Value="{DynamicResource HighlightBrush}" />
      </Style>
      <Style Selector="TextBlock.Header2">
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="Foreground" Value="{DynamicResource HighlightBrush}" />
      </Style>
      <Style Selector="TextBlock.NewsHeader">
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="FontSize" Value="26" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{DynamicResource HighlightBrush}" />
      </Style>
      <Style Selector="TextBlock.NewsDescription">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextWrapping" Value="Wrap" />
      </Style>
      <Style Selector="TextBlock.NewsDate">
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextWrapping" Value="Wrap" />
      </Style>
    </Panel.Styles>
    <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*">
      <DrawingPresenter Opacity="0.05" Grid.Column="0" Width="600" Height="600" Grid.ColumnSpan="1" Grid.Row="2" Grid.RowSpan="1" Drawing="{DynamicResource WasabiLogo}" />
    </Grid>
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" Margin="20,40">
      <DockPanel LastChildFill="True" Grid.Column="1" Grid.ColumnSpan="1" Grid.RowSpan="2" Margin="5">
        <TextBlock Classes="Header" DockPanel.Dock="Top">Updates</TextBlock>
        <ListBox Items="{Binding News}" 
                 Background="Transparent"
                 BorderThickness="0"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <Button Command="{Binding $parent[UserControl].DataContext.OpenBrowserCommand}" CommandParameter="{Binding LinkString}" >
                <StackPanel Margin="0,0,0,20" Spacing="6" Background="Transparent">
                  <TextBlock Classes="NewsHeader" Text="{Binding Title}"/>
                  <TextBlock Classes="NewsDescription" Text="{Binding Description}"/>
                  <TextBlock Classes="NewsDate" Text="{Binding Date, StringFormat=\{0:D\}}"/>
                </StackPanel>
              </Button>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </DockPanel>
      <DockPanel LastChildFill="True" Grid.Column="0" Grid.ColumnSpan="1" Grid.RowSpan="1" Margin="5">
        <TextBlock Classes="Header2" DockPanel.Dock="Top">Recently Opened</TextBlock>
      </DockPanel>
      <DockPanel LastChildFill="True" Grid.Column="0" Grid.ColumnSpan="1" Grid.Row="1" Grid.RowSpan="1" Margin="5">
        <TextBlock Classes="Header2" DockPanel.Dock="Top">Common Actions</TextBlock>
        <Panel>
          <WrapPanel>

            <Button Margin="5" Command="{Binding RunGenerateWallet}">
              <Grid RowDefinitions="*,Auto" Margin="5">
                <DrawingPresenter Grid.RowSpan="1" Margin="5" Width="64" VerticalAlignment="Center" HorizontalAlignment="Center" 
                      Drawing="{DynamicResource GenerateWallet}" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" TextAlignment="Center" Text="Generate Wallet" VerticalAlignment="Center" HorizontalAlignment="Center"/>
              </Grid>
            </Button>

            <Button Margin="5" Command="{Binding RunRecoverWallet}">
              <Grid RowDefinitions="*,Auto" Margin="5">
                <DrawingPresenter Grid.RowSpan="1" Margin="5" Width="64" VerticalAlignment="Center" HorizontalAlignment="Center" 
                      Drawing="{DynamicResource RecoverWallet}" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" TextAlignment="Center" Text="Recover Wallet" VerticalAlignment="Center" HorizontalAlignment="Center"/>
              </Grid>
            </Button>

            <Button Margin="5" Command="{Binding RunConnectHardwareWallet}">
              <Grid RowDefinitions="*,Auto" Margin="5">
                <DrawingPresenter Grid.RowSpan="1" Margin="5" Width="64" VerticalAlignment="Center" HorizontalAlignment="Center" 
                      Drawing="{DynamicResource WalletExplorer_HardwareWalletClosed}" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" TextAlignment="Center" Text="Manage&#013;Hardware Wallets" VerticalAlignment="Center" HorizontalAlignment="Center" />
              </Grid>
            </Button>           
            
          </WrapPanel>
        </Panel>
      </DockPanel>
    </Grid>
  </Panel>
</UserControl>
