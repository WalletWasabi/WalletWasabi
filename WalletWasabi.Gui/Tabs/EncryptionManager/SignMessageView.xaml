<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:controls="clr-namespace:WalletWasabi.Gui.Controls;assembly=WalletWasabi.Gui" Design.Width="600">
  <controls:GroupBox Title="{Binding Title}" BorderThickness="0" Classes="docTabContainer">
    <Grid Classes="content" Margin="0 10 0 0">
      <StackPanel Orientation="Vertical">
        <TextBox AcceptsReturn="True" TextWrapping="Wrap" Height="125" Text="{Binding Message}" />
        <controls:ExtendedTextBox Text="{Binding Address}" Watermark="Address" UseFloatingWatermark="True" />
        <controls:NoparaPasswordBox Password="{Binding Password}" Watermark="Password" />
        <controls:ExtendedTextBox Text="{Binding Signature}" Watermark="Signature" UseFloatingWatermark="True" TextWrapping="Wrap" AcceptsReturn="True" />
        <Grid>
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock Text="{Binding WarningMessage}" />
          </StackPanel>
          <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Sign" Command="{Binding SignCommand}" />
          </StackPanel>
        </Grid>
      </StackPanel>
    </Grid>
  </controls:GroupBox>
</UserControl>
