            <GeometryDrawing Brush="#FF000000" Geometry="F1M9,11L7,11 7,13 9,13z M9,10L7,10 7,5 9,5z" />
          </DrawingGroup>
        </DrawingPresenter>
        <ContentControl Margin="2" VerticalAlignment="Center" Content="{Binding Message}"/>
      </StackPanel>
    </DataTemplate>

