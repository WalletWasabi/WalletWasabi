		<PackageReference Include="Svg.Skia.Avalonia" Version="0.10.0-preview7" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\WalletWasabi.Gui\WalletWasabi.Gui.csproj" />
