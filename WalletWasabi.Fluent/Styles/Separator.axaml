<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <Border Padding="20" MinWidth="200">
      <Separator />
    </Border>
  </Design.PreviewWith>

  <Style Selector="Separator">
    <Setter Property="Height" Value="0.55" />
    <Setter Property="Background" Value="{DynamicResource SeparatorBackgroundBrush}" />
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <Style Selector="Separator.vertical">
    <Setter Property="Height" Value="NaN" />
    <Setter Property="Width" Value="0.55" />
  </Style>

</Styles>
