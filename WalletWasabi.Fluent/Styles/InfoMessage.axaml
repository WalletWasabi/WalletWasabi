<Styles xmlns="https://github.com/avaloniaui">
  <Design.PreviewWith>
    <Border Padding="40">
      <InfoMessage Classes="overlay" Padding="25">This is a test message.</InfoMessage>
    </Border>
  </Design.PreviewWith>

  <Style Selector="InfoMessage :is(TextBlock)">
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <Style Selector="InfoMessage.overlay">
    <Setter Property="Background" Value="{DynamicResource PopupBackground}" />
  </Style>

  <Style Selector="InfoMessage.overlay /template/ Border#PART_Border">
    <Setter Property="CornerRadius" Value="4" />
    <Setter Property="BoxShadow" Value="{DynamicResource InfoBoxShadow}" />
    <Setter Property="Margin" Value="6" />
  </Style>

</Styles>
