<Styles xmlns="https://github.com/avaloniaui">
  <Style Selector="Button.activeHyperLink">
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource HyperLinkForeground}" />
    <Setter Property="Cursor" Value="Hand" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="Background" Value="Transparent" />
  </Style>

  <Style Selector="Button.activeHyperLink:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="TextBlock.Foreground" Value="{DynamicResource HyperLinkForeground}" />
  </Style>

  <Style Selector="Button.activeHyperLink:pressed /template/ ContentPresenter">
    <Setter Property="Background" Value="Transparent" />
  </Style>

</Styles>