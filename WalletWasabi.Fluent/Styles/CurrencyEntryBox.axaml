<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="using:WalletWasabi.Fluent.Controls">

  <!-- Make CurrencyEntryBox borderless and no background when inside DualCurrencyEntryBox -->
  <Style Selector="c|DualCurrencyEntryBox c|CurrencyEntryBox">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <!-- Make CurrencyEntryBox borderless and no background when inside DualCurrencyEntryBox and focused -->
  <Style Selector="c|DualCurrencyEntryBox c|CurrencyEntryBox:focus /template/ Border#PART_BorderElement">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <!-- Also Hide DataValidationErrors when inside DualCurrencyEntryBox -->
  <Style Selector="c|DualCurrencyEntryBox c|CurrencyEntryBox /template/ DataValidationErrors#PART_DataValidationErrors">
    <Setter Property="IsVisible" Value="False" />
  </Style>
</Styles>
