<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:dialog="using:WalletWasabi.Fluent.ViewModels.Dialogs"
             xmlns:models="clr-namespace:WalletWasabi.Fluent.Models"
             mc:Ignorable="d" d:DesignWidth="428" d:DesignHeight="371"
             x:DataType="dialog:InsufficientBalanceDialogViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Dialogs.InsufficientBalanceDialogView">
  <c:ContentArea Title="{Binding Title}"
                 EnableBack="{Binding EnableBack}"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <DockPanel>
      <StackPanel Spacing="10" Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Bottom">
        <StackPanel.Styles>
          <Style Selector="Button">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="40" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeH6}" />
            <Setter Property="Padding" Value="0" />
          </Style>
          <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ActionButtonPressedBackgroundColor}" />
          </Style>
          <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ActionButtonPointerOverBackgroundColor}" />
          </Style>
        </StackPanel.Styles>
        <Button Command="{Binding NextCommand}"
                CommandParameter="{x:Static models:InsufficientBalanceUserDecision.SendAnyway}"
                Content="Send anyway"
                IsVisible="{Binding EnableSendAnyway}" />

        <Button Command="{Binding NextCommand}"
                CommandParameter="{x:Static models:InsufficientBalanceUserDecision.SelectMoreCoin}"
                Content="Select more coin"
                IsVisible="{Binding EnableSelectMoreCoin}" />

        <Button Command="{Binding NextCommand}"
                CommandParameter="{x:Static models:InsufficientBalanceUserDecision.SubtractTransactionFee}"
                Content="Subtract fee"
                IsVisible="{Binding EnableSubtractFee}" />
      </StackPanel>

      <TextBlock Text="{Binding Question}" TextWrapping="Wrap" Margin="10 0 10 40" TextAlignment="Center" DockPanel.Dock="Bottom" />

      <Viewbox MaxHeight="150" Margin="40" HorizontalAlignment="Center" VerticalAlignment="Center">
        <PathIcon Data="{StaticResource warning_regular}" Opacity="0.6" />
      </Viewbox>

    </DockPanel>
  </c:ContentArea>
</UserControl>
