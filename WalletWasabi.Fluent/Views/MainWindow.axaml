<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:WalletWasabi.Fluent.Views"
        xmlns:vm="using:WalletWasabi.Fluent.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WalletWasabi.Fluent.Views.MainWindow"
        x:Name="MainWindow"
        MinWidth="500" MinHeight="420"
        WindowStartupLocation="CenterScreen"
        Background="{x:Null}"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome, OSXThickTitleBar"
        Title="Wasabi Wallet">

  <Panel Margin="{Binding #MainWindow.OffScreenMargin}">
    <local:MainView />
  </Panel>
</Window>