<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets.Settings"
             xmlns:wallets1="clr-namespace:WalletWasabi.Fluent.Models.Wallets"
             xmlns:dv="clr-namespace:WalletWasabi.Fluent.Views.Dialogs"
             x:DataType="vm:WalletCoinJoinSettingsViewModel"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Settings.WalletCoinJoinSettingsView"
             x:CompileBindings="True">

  <StackPanel Classes="settingsLayout">

    <DockPanel>
      <TextBlock Text="Pre-sets" />
      <Button Theme="{StaticResource AccentButton}" Content="Maximize Privacy" Command="{Binding SelectMaximizePrivacySettings}" Classes="standalone" DockPanel.Dock="Left" ToolTip.Tip="Choice of the paranoid. Optimizes for privacy at all costs." />
      <Button Theme="{StaticResource AccentButton}" Content="Speedy" Command="{Binding SelectSpeedySettings}" Classes="standalone" Margin="130 0" ToolTip.Tip="Getting things done. Geared towards speed and convenience." />
      <Button Theme="{StaticResource AccentButton}" Content="Economical" Command="{Binding SelectEconomicalSettings}" Classes="standalone" DockPanel.Dock="Right" ToolTip.Tip="For savers. Only participates in coinjoins during the cheapest parts of the week." />
    </DockPanel>

    <DockPanel>
      <TextBlock Text="Automatically start coinjoin" />
      <ToggleSwitch IsChecked="{Binding AutoCoinJoin}" Command="{Binding SetAutoCoinJoin}" />
    </DockPanel>

    <DockPanel ToolTip.Tip="Only allow a single coin with anonymity score 1 into coinjoin registration.">
      <TextBlock Text="Red coin isolation" />
      <ToggleSwitch IsChecked="{Binding RedCoinIsolation}" Command="{Binding SetRedCoinIsolationCommand}"/>
    </DockPanel>
    
    <DockPanel>
      <TextBlock Text="Anonymity score target" ToolTip.Tip="Minimum anonymity score for a coin to be considered private. Choose your target between 2 and 300."/>
      <TextBox Classes="standalone" Name="AnonScoreTargetTextBox" Text="{Binding AnonScoreTarget}" DockPanel.Dock="Right" Watermark="Choose between 2 and 300."/>
    </DockPanel>

    <DockPanel ToolTip.Tip="Only coinjoin when the fee rate is below the median of this time period.">
      <TextBlock Text="Coinjoin time preference" />
      <ComboBox HorizontalAlignment="Right"
                ItemsSource="{Binding TimeFrames}"
                SelectedItem="{Binding SelectedTimeFrame}" />
    </DockPanel>
    
    <Separator />

    <DockPanel>
      <TextBlock Text="Coinjoin to this wallet:" />
      <ComboBox ItemsSource="{Binding Wallets}" IsEnabled="{Binding IsOutputWalletSelectionEnabled}"
                SelectedItem="{Binding SelectedOutputWallet}">
        <ComboBox.ItemTemplate>
          <DataTemplate x:DataType="wallets1:IWalletModel">
            <TextBlock Text="{Binding Name}" />
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <PathIcon DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0 2 7 0" Data="{StaticResource warning_regular}"
                Foreground="{DynamicResource WarningMessageForeground}" Height="17">
        <ToolTip.Tip>
          <TextBlock>
            - Only loaded wallets can be selected.<LineBreak />
            - Coins from the coinjoin transaction will be received by this wallet. However, this setting resets after Wasabi restarts.<LineBreak />
            - The selected wallet cannot be changed when a coinjoin is in progress.
          </TextBlock>
        </ToolTip.Tip>
      </PathIcon>
    </DockPanel>

    <DockPanel ToolTip.Tip="Coinjoin will automatically stop if the wallet balance is less than this.">
      <TextBlock Text="Stop coinjoin threshold" />
      <CurrencyEntryBox Classes="standalone" Text="{Binding PlebStopThreshold}" CurrencyCode="BTC" />
    </DockPanel>

  </StackPanel>
</UserControl>
