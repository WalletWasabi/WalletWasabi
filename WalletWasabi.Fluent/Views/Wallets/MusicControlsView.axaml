<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WalletWasabi.Fluent.Views.Wallets.MusicControlsView">
  <UserControl.Styles>
    <Style Selector="TextBlock">
      <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
  </UserControl.Styles>
  <Border
    TextBlock.FontFamily="{StaticResource MonospacedFont}"
    Padding="20 10" CornerRadius="4 4 0 0" BorderThickness="1 1 1 0" Background="#19FFFFFF" BorderBrush="#3CFFFFFF">
    <StackPanel Orientation="Horizontal" Spacing="20">
      <TextBlock Text="Round in progress" />

      <Separator Classes="vertical" />

      <ProgressBar Minimum="0" Maximum="100" Value="89" Foreground="White" />

      <TextBlock Text="09:59" />

      <Separator Classes="vertical" />

      <Button Classes="plain">
        <PathIcon Data="{StaticResource pause_regular}" />
      </Button>
      <Button Classes="plain">
        <PathIcon Data="{StaticResource stop_regular}" />
      </Button>
    </StackPanel>
  </Border>
</UserControl>
