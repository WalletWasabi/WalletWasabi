<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:WalletWasabi.Fluent.ViewModels.Wallets.Send"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
             x:DataType="vm:CoinjoinSuggestionViewModel"
             ClipToBounds="False"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Send.CoinjoinSuggestionControl">
  <Panel MinHeight="80" MinWidth="100">
    <StackPanel Spacing="10" VerticalAlignment="Center">
      <PathIcon Data="{StaticResource wallet_action_coinjoin}"
                Foreground="{StaticResource SystemAccentColor}" />

      <TextBlock TextWrapping="Wrap" Text="Coinjoin more and" TextAlignment="Center" />
      <TextBlock TextWrapping="Wrap" Text="retry your transaction later" TextAlignment="Center" />
    </StackPanel>
  </Panel>
</UserControl>
