<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:design="clr-namespace:WalletWasabi.Fluent.ViewModels.Wallets.Home.Tiles.Design"
             mc:Ignorable="d" d:DesignWidth="800"
             x:DataType="design:IWalletDashboardViewModel"
             x:Class="WalletWasabi.Fluent.Views.Wallets.Home.WalletDashboard">

  <Design.DataContext>
    <design:WalletDashboardViewModelDesign>
      <design:WalletDashboardViewModelDesign.Children>
        <design:FakeTileViewModel Title="Balance" Value="0.01234 BTC" Icon="info_regular" />
        <design:FakeTileViewModel Title="Privacy level" Value="40%" Icon="shield_regular" />
        <design:FakeTileViewModel Title="Exchange rate" Value="100000 USD" Icon="normal_transaction" />
      </design:WalletDashboardViewModelDesign.Children>
    </design:WalletDashboardViewModelDesign>
  </Design.DataContext>

  <ItemsControl Items="{Binding Children}">
    <ItemsControl.ItemsPanel>
      <ItemsPanelTemplate>
        <UniformGrid Rows="1" />
      </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>
  </ItemsControl>
</UserControl>
