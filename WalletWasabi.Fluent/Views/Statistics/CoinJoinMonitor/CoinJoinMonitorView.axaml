<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="using:WalletWasabi.Fluent.Controls"
             xmlns:cjm="clr-namespace:WalletWasabi.Fluent.ViewModels.Statistics.CoinJoinMonitor"
             x:DataType="cjm:CoinJoinMonitorViewModel"
             x:CompileBindings="True"
             x:Class="WalletWasabi.Fluent.Views.Statistics.CoinJoinMonitor.CoinJoinMonitorView">
  <c:ContentArea Title="{Binding Title}"
                 EnableNext="{Binding !EnableBack}"
                 NextContent="Close"
                 EnableBack="{Binding EnableBack}">
    <TreeDataGrid Source="{Binding Source}"
                  CanUserSortColumns="True">
      <TreeDataGrid.Styles>
        <Style Selector="TreeDataGridRow">
          <Setter Property="Height" Value="47.5" />
        </Style>
      </TreeDataGrid.Styles>
    </TreeDataGrid>
  </c:ContentArea>
</UserControl>
