<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Design.PreviewWith>
    <ScriptTypePresenter />
  </Design.PreviewWith>

  <ControlTheme x:Key="{x:Type ScriptTypePresenter}" TargetType="ScriptTypePresenter">
    <Setter Property="Template">
        <ControlTemplate TargetType="ScriptTypePresenter">
          <Border BorderThickness="1"
                  BorderBrush="{DynamicResource TextControlForeground}"
                  Opacity="0.6"
                  CornerRadius="4"
                  Padding="3">
            <TextBlock Classes="h10"
                       Text="{Binding ScriptType.ShortName, RelativeSource={RelativeSource TemplatedParent}, FallbackValue='TS'}">
              <ToolTip.Tip>
                <TextBlock Text="{Binding ScriptType.Name, RelativeSource={RelativeSource TemplatedParent}, FallbackValue='TS'}" />
              </ToolTip.Tip>
            </TextBlock>
          </Border>
        </ControlTemplate>
    </Setter>
  </ControlTheme>
</ResourceDictionary>
