<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:WalletWasabi.Fluent.Controls;assembly=WalletWasabi.Fluent"
                    xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
                    xmlns:behaviors="using:WalletWasabi.Fluent.Behaviors">
  <Design.PreviewWith>
    <c:CurrencyEntryBox IsReadOnly="True" />
  </Design.PreviewWith>

  <!-- TextControlBorderThemeThickness -->
  <Thickness x:Key="CurrencyEntryBoxBorderThemeThickness">0,0,0,2</Thickness>
  <!-- TextControlBorderThemeThicknessFocused -->
  <Thickness x:Key="CurrencyEntryBoxBorderThemeThicknessFocused">0,0,0,2</Thickness>
  <!-- TextControlThemePadding -->
  <Thickness x:Key="CurrencyEntryBoxThemePadding">15,10,15,8</Thickness>

  <ControlTheme x:Key="{x:Type c:CurrencyEntryBox}" TargetType="c:CurrencyEntryBox">

    <Setter Property="Foreground" Value="{DynamicResource TextControlForeground}" />
    <Setter Property="Background" Value="{DynamicResource TextControlBackground}" />
    <Setter Property="CaretBrush" Value="{DynamicResource TextControlForeground}" />
    <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrush}" />
    <Setter Property="SelectionBrush" Value="{DynamicResource TextControlSelectionHighlightColor}" />
    <Setter Property="BorderThickness" Value="{DynamicResource CurrencyEntryBoxBorderThemeThickness}" />
    <Setter Property="FontSize" Value="{DynamicResource ControlContentThemeFontSize}" />
    <Setter Property="MinHeight" Value="{DynamicResource TextControlThemeMinHeight}" />
    <Setter Property="MinWidth" Value="{DynamicResource TextControlThemeMinWidth}" />
    <Setter Property="Padding" Value="{DynamicResource CurrencyEntryBoxThemePadding}" />
    <Setter Property="FocusAdorner" Value="{x:Null}" />

    <Setter Property="Watermark" Value="{Binding $self.CurrencyFormat.DefaultWatermark}" />

    <Setter Property="ContextMenu">
      <ContextMenu>
        <MenuItem Header="Cut" Command="{Binding $parent[TextBox].CustomCutCommand}" IsEnabled="{Binding $parent[TextBox].CanCut}"
                  InputGesture="{x:Static TextBox.CutGesture}" />
        <MenuItem Header="Copy" Command="{Binding $parent[TextBox].CustomCopyCommand}"
                  IsEnabled="{Binding $parent[TextBox].CanCopy}" InputGesture="{x:Static TextBox.CopyGesture}" />
        <MenuItem Header="Paste" Command="{Binding $parent[TextBox].CustomPasteCommand}"
                  IsEnabled="{Binding $parent[TextBox].CanPaste}" InputGesture="{x:Static TextBox.PasteGesture}" />
      </ContextMenu>
    </Setter>
    <Setter Property="Cursor" Value="IBeam" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />

    <Setter Property="Template">
      <ControlTemplate>
        <DockPanel>
          <DataValidationErrors DockPanel.Dock="Bottom" x:Name="PART_DataValidationErrors" />

          <Panel IsVisible="{Binding !IsReadOnly, RelativeSource={RelativeSource AncestorType={x:Type c:CurrencyEntryBox}}}">

            <!-- Main Border -->
            <Border Name="PART_BorderElement"
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              MinWidth="{TemplateBinding MinWidth}"
              MinHeight="{TemplateBinding MinHeight}" />

            <Panel
              Margin="{TemplateBinding BorderThickness}">
              <Grid ColumnDefinitions="Auto,*,Auto">

                <!-- InnerLeftContent -->
                <ContentPresenter Grid.Column="0"
                                  Content="{TemplateBinding InnerLeftContent}" />
                <Panel x:Name="PART_InnerDockPanel" Grid.Column="1"
                       Margin="{TemplateBinding Padding}">
                  <ScrollViewer
                    HorizontalScrollBarVisibility="{TemplateBinding (ScrollViewer.HorizontalScrollBarVisibility)}"
                    VerticalScrollBarVisibility="{TemplateBinding (ScrollViewer.VerticalScrollBarVisibility)}">
                    <DockPanel>
                      <Panel>

                        <!-- Watermark -->
                        <TextBlock Name="PART_Watermark"
                                   Opacity="0.5"
                                   Text="{TemplateBinding Watermark}"
                                   TextAlignment="{TemplateBinding TextAlignment}"
                                   TextWrapping="{TemplateBinding TextWrapping}"
                                   IsVisible="{TemplateBinding Text, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                   VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

                        <DockPanel HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}">

                          <!-- Approx symbol -->
                          <Panel DockPanel.Dock="Left"
                                 HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                 IsVisible="{Binding CurrencyFormat.IsApproximate, RelativeSource={RelativeSource TemplatedParent}}">
                            <TextBlock Text="≈"
                                       IsVisible="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                       Opacity="0.5"
                                       Margin="0 0 5 0" />
                          </Panel>

                          <!-- Currency Code -->
                          <TextBlock Name="PART_CurrencyCode"
                                     Opacity="0.5"
                                     Margin="5 0 0 0"
                                     Text="{Binding CurrencyFormat.CurrencyCode, RelativeSource={RelativeSource TemplatedParent}}"
                                     IsVisible="{TemplateBinding Text, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                     HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                     VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                     DockPanel.Dock="Right" />

                          <!-- Main TextPresenter -->
                          <TextPresenter Name="PART_TextPresenter"
                                         Text="{TemplateBinding Text, Mode=TwoWay}"
                                         CaretIndex="{TemplateBinding CaretIndex}"
                                         SelectionStart="{TemplateBinding SelectionStart}"
                                         SelectionEnd="{TemplateBinding SelectionEnd}"
                                         TextAlignment="{TemplateBinding TextAlignment}"
                                         TextWrapping="{TemplateBinding TextWrapping}"
                                         PasswordChar="{TemplateBinding PasswordChar}"
                                         RevealPassword="{TemplateBinding RevealPassword}"
                                         SelectionBrush="{TemplateBinding SelectionBrush}"
                                         SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                         CaretBrush="{TemplateBinding CaretBrush}"
                                         HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                         VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </DockPanel>
                      </Panel>
                    </DockPanel>
                  </ScrollViewer>
                </Panel>
                <ContentPresenter Grid.Column="2"
                                  Content="{TemplateBinding InnerRightContent}" />
              </Grid>
            </Panel>
          </Panel>

          <Interaction.Behaviors>
            <behaviors:FlyoutSuggestionBehavior Target="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                                Content="{Binding ClipboardSuggestion, RelativeSource={RelativeSource TemplatedParent}}"
                                                ApplySuggestionCommand="{Binding ApplySuggestionCommand, RelativeSource={RelativeSource TemplatedParent}}"
                                                x:Name="SuggestionBehavior" />
          </Interaction.Behaviors> 
        </DockPanel>
      </ControlTemplate>
    </Setter>

    <!-- Readonly Template -->
    <Style Selector="^:readonly">
      <Setter Property="Template">
        <ControlTemplate>
          <DockPanel>
            <ContentPresenter x:Name="PART_HeaderContentPresenter"
                              DockPanel.Dock="Top"
                              TextElement.FontWeight="Normal"
                              TextElement.Foreground="{DynamicResource TextControlHeaderForeground}"
                              IsVisible="False"
                              Margin="{DynamicResource TextBoxTopHeaderMargin}" />

            <Panel>
              <Border
                BorderThickness="{TemplateBinding BorderThickness}"
                MinWidth="{TemplateBinding MinWidth}"
                MinHeight="{TemplateBinding MinHeight}" />
              <Panel
                Margin="{TemplateBinding BorderThickness}">
                <Panel
                  Margin="{TemplateBinding Padding}">
                  <DockPanel>
                    <StackPanel Orientation="Horizontal">
                      <TextBlock Margin="0 0 5 0"
                                 Text="≈"
                                 IsVisible="{Binding CurrencyFormat.IsApproximate, RelativeSource={RelativeSource TemplatedParent}}"
                                 HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                      <TextPresenter Name="PART_TextPresenter"
                                     Text="{TemplateBinding Text, Mode=TwoWay}"
                                     CaretIndex="{TemplateBinding CaretIndex}"
                                     SelectionStart="{TemplateBinding SelectionStart}"
                                     SelectionEnd="{TemplateBinding SelectionEnd}"
                                     TextAlignment="{TemplateBinding TextAlignment}"
                                     TextWrapping="{TemplateBinding TextWrapping}"
                                     PasswordChar="{TemplateBinding PasswordChar}"
                                     RevealPassword="{TemplateBinding RevealPassword}"
                                     SelectionBrush="{TemplateBinding SelectionBrush}"
                                     SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                     CaretBrush="{TemplateBinding CaretBrush}"
                                     HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                     VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                      <TextBlock Margin="5 0 0 0"
                                 Text="{Binding CurrencyFormat.CurrencyCode, RelativeSource={RelativeSource TemplatedParent}}"
                                 IsVisible="{TemplateBinding Text, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                 HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </StackPanel>
                  </DockPanel>
                </Panel>
              </Panel>
            </Panel>
          </DockPanel>
        </ControlTemplate>
      </Setter>
    </Style>

    <Style Selector="^/template/ Border#PART_BorderElement">
      <Setter Property="CornerRadius" Value="4" />
    </Style>

    <!-- TODO: temporary fix to prevent layout issue when error occurs  -->
    <Style Selector="^/template/ DataValidationErrors">
      <Setter Property="MinHeight" Value="21" />
    </Style>

    <!-- Disabled State -->
    <Style Selector="^:disabled">
      <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundDisabled}" />
    </Style>

    <Style Selector="^:disabled /template/ Border#PART_BorderElement">
      <Setter Property="Background" Value="{DynamicResource TextControlBackgroundDisabled}" />
      <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrushDisabled}" />
    </Style>

    <Style Selector="^:disabled /template/ TextBlock#PART_Watermark">
      <Setter Property="Foreground" Value="{DynamicResource TextControlPlaceholderForegroundDisabled}" />
    </Style>

    <!-- PointerOver State-->
    <Style Selector="^:disabled">
      <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundPointerOver}" />
    </Style>

    <Style Selector="^:pointerover /template/ TextBlock#PART_Watermark">
      <Setter Property="Foreground" Value="{DynamicResource TextControlPlaceholderForegroundPointerOver}" />
    </Style>

    <!-- Focused State -->
    <Style Selector="^:focus">
      <Setter Property="Foreground" Value="{DynamicResource TextControlForegroundFocused}" />
    </Style>

    <Style Selector="^:focus /template/ TextBlock#PART_Watermark">
      <Setter Property="Foreground" Value="{DynamicResource TextControlPlaceholderForegroundFocused}" />
    </Style>

    <Style Selector="^:focus /template/ Border#PART_BorderElement">
      <Setter Property="Background" Value="{DynamicResource TextControlBackgroundFocused}" />
      <Setter Property="BorderBrush" Value="{DynamicResource TextControlBorderBrushFocused}" />
      <Setter Property="BorderThickness" Value="{DynamicResource DualCurrencyEntryBoxBorderThemeThicknessFocused}" />
    </Style>

    <!-- Error state -->
    <Style Selector="^:error /template/ Border#PART_BorderElement">
      <Setter Property="BorderBrush" Value="{DynamicResource SystemControlErrorTextForegroundBrush}" />
    </Style>

    <!-- Move Suggestion Behavior Flyout Placement -->
    <Style Selector="^[HorizontalContentAlignment=Left] /template/ behaviors|FlyoutSuggestionBehavior#SuggestionBehavior">
      <Setter Property="PlacementMode" Value="BottomEdgeAlignedLeft" />
    </Style>

    <Style Selector="^[HorizontalContentAlignment=Right] /template/ behaviors|FlyoutSuggestionBehavior#SuggestionBehavior">
      <Setter Property="PlacementMode" Value="BottomEdgeAlignedRight" />
    </Style>

    <!-- Correct caret offset for empty boxes so that it fits nicely with the different watermarks -->
    <Style Selector="^:empty[HorizontalContentAlignment=Right] /template/ TextPresenter#PART_TextPresenter">
      <Setter Property="Margin" Value="0 0 35 0" />
    </Style>
  </ControlTheme>
</ResourceDictionary>
